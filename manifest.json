{
  "name": "Email Writer Assistant",
  "description": "AI powered assistant to help you draft emails quickly and effectively.",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://email-backend-8k95.onrender.com/*",
    "*://mail.google.com/*"
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Email Writer Assistant"
  },

  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://mail.google.com/*"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["*://mail.google.com/*"]
    }
  ]
}
